<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>

<BorderPane fx:id="pane" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.control.menu.calendar.EventsTableController">
	<center>
		<TableView fx:id="eventsT" prefHeight="250.0" prefWidth="500.0" BorderPane.alignment="CENTER">
			<columns>
				<TableColumn fx:id="typeC" maxWidth="4000.0" prefWidth="77.0" text="Type" />
				<TableColumn fx:id="ideaIdC" maxWidth="3000.0" minWidth="0.0" prefWidth="67.0" text="Idea Id" />
				<TableColumn fx:id="startDateC" prefWidth="150.0" text="Start Date" />
				<TableColumn fx:id="finishDateC" prefWidth="150.0" text="Finish Date" />
            	<TableColumn fx:id="period" maxWidth="4000.0" prefWidth="75.0" text="Period" />
			</columns>
			<columnResizePolicy>
				<TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
			</columnResizePolicy>
		</TableView>
	</center>
</BorderPane>
